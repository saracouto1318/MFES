class Appointment

types

instance variables
  public doctor:Doctor;
  public prescriptions:set of (Prescription);
  
operations
	public Appointment: Doctor * set of(Prescription) ==> Appointment
		Appointment(d, p) == (doctor := d; prescriptions := p; return self)
	post doctor = d and prescriptions = p;
	
	pure public getDoctorAppointment : () ==> Doctor
		getDoctorAppointment() == (return doctor);
		
  pure public getPrescriptions : () ==> set of (Prescription)
  	getPrescriptions() == (return prescriptions);
  	
  pure public getPrescription : code ==> Prescription
  	getPrescription(code) == (
  															for all p in set prescriptions do
  																if(p.getCode() = code)
  																	then return p;
  														);
  															

end Appointment
