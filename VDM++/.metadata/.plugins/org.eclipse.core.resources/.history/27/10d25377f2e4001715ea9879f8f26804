\begin{vdmpp}[breaklines=true]
class NursingTreatment is subclass of Task

types
 public String = seq of (char);
instance variables
 public name:String;
  public nurse:[Nurse];
  
  inv nurse <> nil;
(*@
\label{Nurse:10}
@*)
(*@
\label{NursingTreatment:10}
@*)
operations
 public NursingTreatment: String ==> NursingTreatment
  NursingTreatment(n) == ( name := n; return self)
 pre n <> []
(*@
\label{getName:14}
@*)
 post name = n;
 
 pure public getName : () ==> String
(*@
\label{setNurse:17}
@*)
  getName() == (return name);
  
 public setNurse : Nurse ==> ()
(*@
\label{getNurse:20}
@*)
  setNurse(n) == (nurse := n);
 
 public getNurse : () ==> String
  getNurse() == (return nurse.getName());
  
(*@
\label{getType:25}
@*)
 pure public getType : () ==> seq of (char) 
  getType() == (return "Nursing Treatment");

end NursingTreatment
